<br>
<% @posts.each do |post| %>

  <div class="card">
    <div class="card-body">
      <div id="<%= dom_id(post)%>">
        <h3 class="card-title"><%= post.title %></h5>
        <p>
          <b>Posted on</b> 
          <%=time_tag post.created_at%>
        </p>
        <p><b>Posted by</b>: <%= post.user.name_full %></p>
        <% if user_signed_in? %>
          <%= link_to 'Show', post %> 
        <% end %>
        <% if user_signed_in? && current_user.id == post.user_id %>
            <%= link_to 'Edit', edit_post_path(post) %>
            <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
        <%end%> 
      </div>
    </div>
  </div>
  <br>
<% end %>

<br>
<%= link_to 'New Post', new_post_path %>

<%= paginate(@posts) %>